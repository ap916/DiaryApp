<Window x:Class="DiaryApp.NewEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryApp"
        mc:Ignorable="d"
        Title="Create a New Diary Entry" Height="400" Width="700" HorizontalAlignment="Center">
    <Grid Background="#FF306E99">
        <TextBox x:Name="NewEntryText" HorizontalAlignment="Stretch" Margin="43,24,44,60" TextWrapping="Wrap" Text="" FontSize="15" AcceptsReturn="True" AcceptsTab="True" Background="#FFB9C9FF"/>
        <Button x:Name="SubmitNewEntry" Content="Save" HorizontalAlignment="Stretch" Margin="161,0,419,16" Width="112" Click="SubmitNewEntry_Click" Height="28" VerticalAlignment="Bottom"/>
        <Button x:Name="CancelNewEntry" Content="Cancel" HorizontalAlignment="Stretch" Margin="394,0,186,16" Width="112" Background="#FFF76354" Click="CancelNewEntry_Click" Height="28" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
