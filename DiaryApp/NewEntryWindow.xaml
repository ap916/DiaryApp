<Window x:Class="DiaryApp.NewEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryApp"
        mc:Ignorable="d"
        Title="Create a New Diary Entry" Height="400" Width="700" HorizontalAlignment="Center">
    <Grid>
        <TextBox x:Name="NewEntryText" HorizontalAlignment="Stretch" Height="285" Margin="43,24,44,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="15" AcceptsReturn="True" AcceptsTab="True"/>
        <Button x:Name="SubmitNewEntry" Content="Submit" HorizontalAlignment="Stretch" Margin="161,325,419,0" VerticalAlignment="Top" Width="112" Height="28" Click="SubmitNewEntry_Click"/>
        <Button x:Name="CancelNewEntry" Content="Cancel" HorizontalAlignment="Stretch" Margin="394,325,186,0" VerticalAlignment="Top" Width="112" Height="28" Background="#FFF76354" Click="CancelNewEntry_Click"/>

    </Grid>
</Window>
