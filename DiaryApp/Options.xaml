<Window x:Name="OptionsWIndow" x:Class="DiaryApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryApp"
        mc:Ignorable="d"
        Title="Customise your Diary" Height="300" Width="400">
    <Grid x:Name="OptionsDialog" Background="#FF64A0C9">
        <TextBox x:Name="CurDir" HorizontalAlignment="Stretch" Height="30" Margin="53,98,55,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="15"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Stretch" Margin="53,186,214,0" VerticalAlignment="Top" Width="125" Height="30" Click="SubmitButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Stretch" Margin="228,186,39,0" VerticalAlignment="Top" Width="125" Height="30" Background="#FFF74B4B" Click="CancelButton_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" Margin="21,27,0,0" TextWrapping="Wrap" Text="Directory for saving .diary files. Default is My Documents Folder. Be sure to escape the backslash with another backslash. eg. '\\' " VerticalAlignment="Top" Width="348" Height="32"/>

    </Grid>
</Window>
