<Window x:Class="DiaryApp.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryApp"
        mc:Ignorable="d"
        Title="Authentication" Height="400" Width="700">
    <Grid x:Name="AuthenticationWindow">
        <TextBlock x:Name="textBlock" Margin="84,78,96,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="59" FontSize="14" FontWeight="Bold"><Run Text="&#x9;&#x9;&#x9;"/><Run FontSize="20" Text="Enter your Password. "/></TextBlock>
        <PasswordBox x:Name="passwordBox" Margin="215,188,214,0" VerticalAlignment="Top"/>
        <Button x:Name="SubmitPass" Content="Login" Margin="315,290,302,0" VerticalAlignment="Top" Click="SubmitPass_Click"/>

    </Grid>
</Window>
